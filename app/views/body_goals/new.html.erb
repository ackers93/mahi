<div class="container">
  <h1>New Body Goal</h1>

  <%= form_with model: @body_goal, local: true do |form| %>
    <% if @body_goal.errors.any? %>
      <div class="alert alert-danger">
        <h4><%= pluralize(@body_goal.errors.count, "error") %> prohibited this goal from being saved:</h4>
        <ul>
          <% @body_goal.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-group">
      <%= form.label :metric_name, "Metric Name", class: "form-label" %>
      <%= form.text_field :metric_name, class: "form-control", placeholder: "e.g., Bodyweight, Chest Measurement, Resting Heart Rate" %>
      <small class="form-text">Choose any metric you want to track</small>
    </div>

    <div class="form-group">
      <%= form.label :measurement_type, "Measurement Type", class: "form-label" %>
      <%= form.text_field :measurement_type, class: "form-control", placeholder: "e.g., lbs, inches, bpm, kg" %>
      <small class="form-text">Unit of measurement (lbs, kg, inches, cm, bpm, etc.)</small>
    </div>

    <div class="form-group">
      <%= form.label :target_value, "Target Value", class: "form-label" %>
      <%= form.number_field :target_value, step: 0.01, class: "form-control", placeholder: "e.g., 180" %>
      <small class="form-text">Your target value for this metric</small>
    </div>

    <div class="form-group">
      <%= form.label :goal_date, "Goal Date", class: "form-label" %>
      <%= form.date_field :goal_date, class: "form-control" %>
      <small class="form-text">When do you want to achieve this goal?</small>
    </div>

    <div class="form-group">
      <%= form.label :note, "Note (Optional)", class: "form-label" %>
      <%= form.text_area :note, class: "form-control", rows: 4, placeholder: "Any additional notes about this goal..." %>
    </div>

    <div class="form-actions">
      <%= form.submit "Create Goal", class: "btn btn-primary" %>
      <%= link_to "Cancel", body_goals_path, class: "btn btn-secondary" %>
    </div>
  <% end %>
</div>

<style>
  .form-text {
    display: block;
    margin-top: 5px;
    font-size: 0.875rem;
    color: #6c757d;
  }

  .form-actions {
    margin-top: 30px;
    display: flex;
    gap: 10px;
  }
</style>


<div class="container">
  <h1>Enter OTP Code</h1>
  
  <p>Please enter the 6-digit code sent to your email or from your authenticator app.</p>

  <%= form_with url: otp_verification_path, method: :post, local: true do |f| %>
    <% if flash[:alert] %>
      <div class="alert alert-danger">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <% if flash[:notice] %>
      <div class="alert alert-info">
        <%= flash[:notice] %>
      </div>
    <% end %>

    <div class="form-group">
      <%= f.label :otp_code, "OTP Code", class: "form-label" %>
      <%= f.text_field :otp_code, class: "form-control", placeholder: "000000", maxlength: 6, autofocus: true, autocomplete: "off" %>
    </div>

    <%= f.submit "Verify", class: "btn btn-primary" %>
  <% end %>

  <p class="mt-3">
    <%= form_with url: resend_otp_verification_path, method: :post, local: true, class: "inline-form" do |f| %>
      <%= f.submit "Resend OTP", class: "btn btn-secondary" %>
    <% end %>
    <%= link_to "Back to sign in", new_user_session_path %>
  </p>
</div>

